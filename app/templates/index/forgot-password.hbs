{{#bp-column-layout classNames="forgot-password-page"}}
    {{#bp-text classNames="heading-large"}}{{t "login.forgotPassword"}}{{/bp-text}}

    {{#bp-text classNames="heading-xsmall email-text"}}{{t "login.email"}}{{/bp-text}}
    {{bp-input type='text' value=userEmail placeholder='' classNames="input_initial"}}
    {{#if (bp-eq emailRight false)}}
        {{#bp-row-layout classNames="mt-1"}}
            {{bp-icon iconName='' color='' classNames="icon_error"}}
            {{#bp-text classNames="tertiary-Destructive"}}Error messages text goes here{{/bp-text}}
        {{/bp-row-layout}}
    {{/if}}
    {{#bp-button text=(t "login.confirm") classNames="btn_primary" click=(action "sendVerificationCode") disabled=confirmDisabled}}{{/bp-button}}
{{/bp-column-layout}}	